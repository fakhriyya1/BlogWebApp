@model List<ArticleDto>

<div class="col-lg-12">
    <div class="sidebar-item recent-posts">
        <div class="sidebar-heading">
            <h2>Recent Posts</h2>
        </div>
        <div class="content">
            <ul>
                @foreach (var item in Model)
                {

                    <li>
                        <a asp-controller="Home" asp-action="Detail" asp-route-articleId="@item.Id">
                            <h5>@item.Title</h5>
                            <span>@item.CreatedDate.ToShortDateString()</span>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
