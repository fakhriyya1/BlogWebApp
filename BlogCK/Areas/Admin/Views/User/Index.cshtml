@model List<UserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">User Management /</span> Users
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card" style="padding: 2rem">
        <div class="table-responsive text-nowrap">

            <a class="btn btn-info mb-3" asp-area="Admin" asp-controller="User" asp-action="Add">Add User <i class=" bx bx-plus"></i> </a>

            <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Email Confirmation</th>
                        <th>Failed access count</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var user in Model)
                    {
                        <tr name="@user.Id">
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>@(user.EmailConfirmed ? "Confirmed" : "Not confirmed")</td>
                            <td>@user.AccessFailedCounts</td>
                            <td>
                                <a asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-userId="@user.Id" class="btn btn-primary btn-sm"><i class="bx bxs-edit"></i></a>
                                <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userId="@user.Id" class="btn btn-danger btn-sm" id="deleteButton"><i class="bx bx-minus-circle"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Email Confirmation</th>
                        <th>Failed access count</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

</div>

@section Scripts {
    <script src="~/js/userIndex.js" type="application/ecmascript"></script>
}

